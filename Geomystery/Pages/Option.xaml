<Page
    x:Class="Geomystery.Option"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geomystery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind View.Theme,Mode=OneWay}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="DarkThemeDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary x:Key="Dark" Source="LightThemeDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource SystemBackgroundAltHighBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="Language"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="Music Volume"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="SFX Volume"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="Fullscreen"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="Night Mode"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="Reset Progress"/>
            <TextBlock FontFamily="Microsoft YaHei UI"
                       FontSize="44"
                       Foreground="MediumPurple"
                       Margin="12,24,12,24"
                       HorizontalAlignment="Right"
                       Text="About Us"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <Button Name="LanLeft"
                        FontSize="36"
                        VerticalAlignment="Center"
                        Content="◀"/>
                <TextBlock Name="LanguageNow"
                           FontFamily="Microsoft YaHei UI"
                           FontSize="44"
                           Foreground="MediumSlateBlue"
                           Margin="12,0,12,0"
                           VerticalAlignment="Center"
                           Text="English"/>
                <Button Name="LanRight"
                        FontSize="36"
                        VerticalAlignment="Center"
                        Content="▶"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <Slider Name="MusicVolSlider"
                        Width="400"
                        VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <Slider Name="SFXVolSlider"
                        Width="400"
                        VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <ToggleButton Name="Fullscreen"
                              FontSize="36"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"
                              Content="✔"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <ToggleButton Name="NightMode"
                              IsChecked="False"
                              Click="NightMode_Click"
                              FontSize="36"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"
                              Content="✔"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <Button Name="ResetProgress"
                        FontSize="36"
                        Margin="12,0,36,0"
                        VerticalAlignment="Center"
                        Content="⚪"/>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Visibility="Visible">
                    <Button Name="ResetYes"
                            FontFamily="Microsoft YaHei UI"
                            FontSize="36"
                            Margin="12,12,12,12"
                            Content="确定"/>
                    <Button Name="ResetNo"
                            FontFamily="Microsoft YaHei UI"
                            FontSize="36"
                            Margin="12,12,12,12"
                            Content="取消"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="104">
                <Button Name="AboutUs"
                        FontFamily="Microsoft YaHei UI"
                        FontSize="48"
                        Foreground="{ThemeResource SystemBackgroundBaseHighBrush}"
                        Background="{x:Null}"
                        VerticalAlignment="Center"
                        Content="Geomystery"
                        Click="AboutUs_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>