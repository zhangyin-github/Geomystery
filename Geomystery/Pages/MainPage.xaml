<Page
    x:Class="Geomystery.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geomystery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="Back" Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame x:Name="myFrame"
               Grid.Row="0"
               Grid.RowSpan="2"/>
        <MediaPlayerElement Name="bgmPlayer"
                            Height="0"
                            Width="0"/>
        <MediaPlayerElement Name="bgaPlayer"
                            Height="0"
                            Width="0"/>
        <RelativePanel x:Name="mytitle"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
            <Button Name="BackButton"
                    RelativePanel.AlignLeftWithPanel="True"
                    Foreground="{ThemeResource fg}"
                    Background="{x:Null}"
                    FontFamily="Segoe MDl2 Assets"
                    FontSize="24"
                    Height="40"
                    Width="64"
                    Content="&#xE0C4;" 
                    Click="BackButton_Click" />
            <Button Name="MuteButton"
                    RelativePanel.RightOf="BackButton"
                    Foreground="{ThemeResource fg}"
                    Background="{x:Null}"
                    FontFamily="Segoe MDl2 Assets"
                    FontSize="24"
                    Height="40"
                    Width="64"
                    Content="&#xE74F;" />
        </RelativePanel>
    </Grid>
</Page>