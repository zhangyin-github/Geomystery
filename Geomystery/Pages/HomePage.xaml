<Page
    x:Class="Geomystery.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geomystery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind View.Theme,Mode=OneWay}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="DarkThemeDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary x:Key="Dark" Source="LightThemeDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource SystemBackgroundAltHighBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Ellipse Height="400"
                     Width="400"
                     Stroke="DarkOrange"
                     StrokeThickness="8"/>
            <Polygon Points="0,100 0,200 135,125"
                     Stroke="Blue"
                     StrokeThickness="8"
                     Stretch="Fill"
                     Height="360"
                     Width="360"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True" FromVerticalOffset="280"/>
                </TransitionCollection>
            </Grid.Transitions>
            <TextBlock Grid.Row="0"
                       FontFamily="Microsoft YaHei UI"
                       FontSize="96"
                       Foreground="MediumPurple"
                       Margin="0,128,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Geomystery"/>
            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Margin="0,0,0,64"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Name="Game"
                        Width="400"
                        FontFamily="Microsoft YaHei UI"
                        FontSize="36"
                        Foreground="{ThemeResource SystemBackgroundBaseHighBrush}"
                        Margin="0,24,0,24"
                        Background="Tomato"
                        Content="Game"
                        Click="Game_Click"/>
                <Button Name="Freestyle"
                        Width="400"
                        FontFamily="Microsoft YaHei UI"
                        FontSize="36"
                        Foreground="{ThemeResource SystemBackgroundBaseHighBrush}"
                        Margin="0,24,0,24"
                        Background="Tomato"
                        Content="Freestyle"
                        Click="Freestyle_Click"/>
                <Button Name="Option"
                        Width="400"
                        FontFamily="Microsoft YaHei UI"
                        FontSize="36"
                        Foreground="{ThemeResource SystemBackgroundBaseHighBrush}"
                        Margin="0,24,0,24"
                        Background="Tomato"
                        Content="Option"
                        Click="Option_Click"/>
            </StackPanel>
        </Grid>
        <Button Grid.Column="2"
                Grid.ColumnSpan="2"
                Name="Achievement"
                Height="44"
                Width="Auto"
                FontFamily="Microsoft YaHei UI"
                FontSize="16"
                Foreground="{ThemeResource SystemBackgroundBaseHighBrush}"
                FontWeight="Bold"
                Background="{x:Null}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Achievement"
                Click="Achievement_Click"/>
    </Grid>
</Page>